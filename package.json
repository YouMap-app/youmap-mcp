{
  "name": "@youmap/youmap-mcp",
  "version": "2.0.0",
  "description": "MCP server for YouMap API - Create and manage maps through AI assistants",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "youmap-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:server": "MCP_MODE=http PORT=3000 tsx src/server.ts",
    "start": "node dist/index.js",
    "start:server": "MCP_MODE=http PORT=3000 node dist/server.js",
    "test": "npm run build && node test.js",
    "test:auth": "npm run build && node test.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "assistant",
    "youmap",
    "maps"
  ],
  "author": "YouMap Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@youmap/youmap-mcp": "^1.4.0",
    "axios": "^1.7.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^13.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/uuid": "^11.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YouMap-app/youmap-mcp.git"
  },
  "homepage": "https://github.com/YouMap-app/youmap-mcp#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
